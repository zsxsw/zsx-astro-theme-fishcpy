---
import { Icon } from "astro-icon/components";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

/* 头像地址，换成你自己的 */
const AVATAR = "https://avatars.githubusercontent.com/u/233106862?v=4";
---

<MainGridLayout title="404" description="Page Not Found">
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-[40vh]">
    <div class="card-base z-10 px-9 py-12 relative w-full flex flex-col items-center justify-center text-center">

      <!-- 头像 -->
      <img
        src={AVATAR}
        alt="avatar"
        class="w-28 h-28 rounded-full mb-6 shadow-xl ring-4 ring-[var(--btn-card-bg-hover)]"
      />

      <!-- 404 大字 -->
      <h1 class="text-7xl font-extrabold text-[var(--text-1)] dark:text-white">404</h1>
      <p class="mt-2 text-lg text-[var(--text-2)]">哎呀，这个页面不见了~</p>

      <!-- 回到主页按钮 -->
      <a
        href="/"
        class="mt-8 inline-flex items-center gap-2 px-6 py-3 rounded-full
               bg-[var(--primary)] text-white
               hover:bg-[var(--primary-hover)]
               active:scale-95
               transition-all duration-200 shadow-lg"
      >
        <Icon name="material-symbols:home-outline" class="text-xl" />
        回到主页
      </a>
    </div>
  </div>
</MainGridLayout>

<style>
  /* 让 404 大字再亮一点（可选） */
  h1 {
    text-shadow: 0 2px 10px var(--primary-alpha, rgba(59, 130, 246, 0.35));
  }
</style>